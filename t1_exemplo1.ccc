def calculate_fine(string has_driving_license, int alcohol_level, int speed, int n_passengers)
{
  float fine;
  fine = 0.0;

  if (has_driving_license == "no") {
    fine = fine + 500.0;
  }

  if (alcohol_level == 2) {
    fine = fine + 400.0;
  } else if (alcohol_level == 3) {
    fine = fine + 800.0;
  } else if (alcohol_level == 4) {
    fine = fine + 1600.0;
  } else if (alcohol_level == 5) {
    fine = fine + 3200.0;
  }

  if (speed > 120) {
    fine = fine + 1000.0;
  } else if (speed > 100) {
    fine = fine + 500.0;
  } else if (speed > 80) {
    fine = fine + 250.0;
  } else if (speed > 60) {
    fine = fine + 125.5;
  } else if (speed > 40) {
    fine = fine + 62.75;
  }

  if (n_passangers == 2) {
    fine = fine * 2;
  } else if (n_passangers == 3) {
    fine = fine * 3;
  } else if (n_passangers == 4) {
    fine = fine * 4;
  } else if (n_passangers == 5) {
    fine = fine * 5;
  } else {
    fine = fine * 10;
  }

  return fine;
}

